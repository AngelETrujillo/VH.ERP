@model IEnumerable<VH.Services.DTOs.ProyectoResponseDto>
@{
    ViewData["Title"] = "Proyectos";
    var esSuperAdmin = User.IsInRole("SuperAdmin");
    var puedeCrear = PermisoHelper.PuedeCrear(Context.Session, "PROYECTOS", esSuperAdmin);
    var puedeEditar = PermisoHelper.PuedeEditar(Context.Session, "PROYECTOS", esSuperAdmin);
    var puedeEliminar = PermisoHelper.PuedeEliminar(Context.Session, "PROYECTOS", esSuperAdmin);
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-building text-primary me-2"></i>Gestión de Proyectos
            </h2>
            <p class="text-muted mb-0">Administra las obras y proyectos de construcción</p>
        </div>
        @if (puedeCrear)
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Proyecto
            </a>
        }
    </div>

    <!-- Alertas -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por nombre o tipo de obra...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-secondary">@Model?.Count() proyectos</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo de Obra</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin Est.</th>
                            <th class="text-end">Presupuesto Total</th>
                            <th class="text-end">Presupuesto EPP/Mes</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Nombre</strong></td>
                                <td>
                                    <span class="badge bg-info">@item.TipoObra</span>
                                </td>
                                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.FechaFinEstimada.HasValue)
                                    {
                                        @item.FechaFinEstimada.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">@item.PresupuestoTotal.ToString("C2")</td>
                                <td class="text-end">
                                    @if (item.PresupuestoEPPMensual.HasValue)
                                    {
                                        @item.PresupuestoEPPMensual.Value.ToString("C2")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-info" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
    </script>
}