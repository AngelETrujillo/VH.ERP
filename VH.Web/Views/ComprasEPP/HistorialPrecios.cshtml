@model IEnumerable<VH.Services.DTOs.CompraEPPResponseDto>

@{
    ViewData["Title"] = "Historial de Precios";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-graph-up"></i> Historial de Precios: @ViewBag.NombreMaterial</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <input type="hidden" name="idMaterial" value="@ViewBag.IdMaterial" />
                <div class="col-md-4">
                    <label class="form-label">Filtrar por Proveedor</label>
                    <select name="idProveedor" class="form-select">
                        <option value="">-- Todos los Proveedores --</option>
                        @foreach (var item in ViewBag.ProveedoresFiltro as List<SelectListItem> ?? new List<SelectListItem>())
                        {
                            <option value="@item.Value" selected="@(ViewBag.FiltroProveedor?.ToString() == item.Value)">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Proveedor</th>
                        <th>Almacén</th>
                        <th class="text-end">Cantidad</th>
                        <th class="text-end">Precio Unitario</th>
                        <th class="text-end">Total</th>
                        <th>Documento</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        decimal? precioAnterior = null;
                        @foreach (var item in Model.OrderByDescending(c => c.FechaCompra))
                        {
                            var variacion = precioAnterior.HasValue
                            ? ((item.PrecioUnitario - precioAnterior.Value) / precioAnterior.Value) * 100
                            : 0;

                            <tr>
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>@item.NombreProveedor</td>
                                <td>@item.NombreAlmacen</td>
                                <td class="text-end">@item.CantidadComprada.ToString("N2")</td>
                                <td class="text-end">
                                    @item.PrecioUnitario.ToString("C2")
                                    @if (precioAnterior.HasValue && variacion != 0)
                                    {
                                        if (variacion > 0)
                                        {
                                            <span class="badge bg-danger ms-1">+@variacion.ToString("N1")%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success ms-1">@variacion.ToString("N1")%</span>
                                        }
                                    }
                                </td>
                                <td class="text-end">@((item.CantidadComprada * item.PrecioUnitario).ToString("C2"))</td>
                                <td>@(string.IsNullOrEmpty(item.NumeroDocumento) ? "-" : item.NumeroDocumento)</td>
                            </tr>
                            precioAnterior = item.PrecioUnitario;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No hay historial de compras para este material
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card mt-3">
            <div class="card-body">
                <h6>Resumen</h6>
                <div class="row">
                    <div class="col-md-3">
                        <strong>Total Compras:</strong> @Model.Count()
                    </div>
                    <div class="col-md-3">
                        <strong>Precio Promedio:</strong> @Model.Average(c => c.PrecioUnitario).ToString("C2")
                    </div>
                    <div class="col-md-3">
                        <strong>Precio Mínimo:</strong> @Model.Min(c => c.PrecioUnitario).ToString("C2")
                    </div>
                    <div class="col-md-3">
                        <strong>Precio Máximo:</strong> @Model.Max(c => c.PrecioUnitario).ToString("C2")
                    </div>
                </div>
            </div>
        </div>
    }
</div>