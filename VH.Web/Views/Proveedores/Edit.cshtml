@model VH.Services.DTOs.ProveedorRequestDto
@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-pencil-square text-warning me-2"></i>Editar Proveedor
            </h2>
            <p class="text-muted mb-0">Modifique la información del proveedor</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Información del Proveedor -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-warning text-dark py-3">
                        <h5 class="mb-0"><i class="bi bi-building me-2"></i>Información del Proveedor</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre o Razón Social <span class="text-danger">*</span></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RFC" class="form-label fw-semibold">RFC <span class="text-danger">*</span></label>
                                <input asp-for="RFC" class="form-control form-control-lg text-uppercase" maxlength="13" />
                                <span asp-validation-for="RFC" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Datos de Contacto -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Datos de Contacto</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Contacto" class="form-label fw-semibold">Nombre del Contacto</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Contacto" class="form-control" />
                                </div>
                                <span asp-validation-for="Contacto" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label fw-semibold">Teléfono</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Telefono" class="form-control" />
                                </div>
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estado -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="form-check form-switch">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" id="switchActivo">
                            <label class="form-check-label fw-semibold" for="switchActivo">
                                <i class="bi bi-toggle-on text-success me-2"></i>Proveedor Activo
                            </label>
                            <p class="text-muted small mb-0 ms-4">El proveedor estará disponible para registrar compras</p>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-check-lg me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-warning mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>Advertencia
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-dot text-warning me-1"></i>Cambiar el RFC puede afectar reportes históricos</li>
                        <li class="mb-2"><i class="bi bi-dot text-warning me-1"></i>Desactivar el proveedor lo ocultará en listas de compra</li>
                        <li><i class="bi bi-dot text-warning me-1"></i>El historial de compras se mantiene sin cambios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}