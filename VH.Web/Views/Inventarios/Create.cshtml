@model VH.Services.DTOs.InventarioRequestDto
@{
    ViewData["Title"] = "Nuevo Inventario";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-boxes text-primary me-2"></i>Nuevo Registro de Inventario
            </h2>
            <p class="text-muted mb-0">Configure el inventario de un material en un almacén</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Material y Almacén -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Material y Almacén</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="IdAlmacen" class="form-label fw-semibold">Almacén <span class="text-danger">*</span></label>
                                <select asp-for="IdAlmacen" class="form-select form-select-lg" asp-items="@ViewBag.Almacenes">
                                    <option value="">-- Seleccionar Almacén --</option>
                                </select>
                                <span asp-validation-for="IdAlmacen" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IdMaterial" class="form-label fw-semibold">Material EPP <span class="text-danger">*</span></label>
                                <select asp-for="IdMaterial" class="form-select form-select-lg" asp-items="@ViewBag.Materiales">
                                    <option value="">-- Seleccionar Material --</option>
                                </select>
                                <span asp-validation-for="IdMaterial" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Configuración de Stock -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Configuración de Stock</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="StockMinimo" class="form-label fw-semibold">Stock Mínimo <span class="text-danger">*</span></label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-warning-subtle text-warning">
                                        <i class="bi bi-arrow-down"></i>
                                    </span>
                                    <input asp-for="StockMinimo" type="number" step="1" min="0" class="form-control" placeholder="0" />
                                </div>
                                <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                                <small class="text-muted">Alerta cuando baje de este nivel</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="StockMaximo" class="form-label fw-semibold">Stock Máximo</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-info-subtle text-info">
                                        <i class="bi bi-arrow-up"></i>
                                    </span>
                                    <input asp-for="StockMaximo" type="number" step="1" min="0" class="form-control" placeholder="0" />
                                </div>
                                <span asp-validation-for="StockMaximo" class="text-danger small"></span>
                                <small class="text-muted">Dejar en 0 para sin límite</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UbicacionPasillo" class="form-label fw-semibold">Ubicación / Pasillo</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-geo-alt"></i>
                                    </span>
                                    <input asp-for="UbicacionPasillo" class="form-control" placeholder="Ej: A-12" />
                                </div>
                                <span asp-validation-for="UbicacionPasillo" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-check-lg me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-primary mb-3">
                        <i class="bi bi-info-circle me-2"></i>Información
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>La existencia se actualiza con compras y entregas</li>
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>El stock mínimo genera alertas visuales</li>
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>La ubicación ayuda a localizar el material</li>
                        <li><i class="bi bi-check2 text-success me-2"></i>No puede duplicar material en el mismo almacén</li>
                    </ul>
                </div>
            </div>

            <div class="card border-0 bg-warning-subtle mt-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-warning mb-2">
                        <i class="bi bi-lightbulb me-2"></i>Nota
                    </h6>
                    <p class="text-muted small mb-0">
                        El inventario también se crea automáticamente al registrar la primera compra de un material en un almacén.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}