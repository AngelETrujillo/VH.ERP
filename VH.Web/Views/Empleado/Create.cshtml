@model VH.Services.DTOs.EmpleadoRequestDto

@{
    ViewData["Title"] = "Nuevo Empleado";
}

<div class="page-content">
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Empleados</a></li>
                <li class="breadcrumb-item active">Nuevo</li>
            </ol>
        </nav>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Nuevo Empleado</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Datos Personales -->
                        <h6 class="text-muted mb-3"><i class="bi bi-person me-2"></i>Datos Personales</h6>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre(s) *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Juan Carlos" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ApellidoPaterno" class="form-label">Apellido Paterno *</label>
                                <input asp-for="ApellidoPaterno" class="form-control" placeholder="García" />
                                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ApellidoMaterno" class="form-label">Apellido Materno</label>
                                <input asp-for="ApellidoMaterno" class="form-control" placeholder="López" />
                                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Datos Laborales -->
                        <h6 class="text-muted mb-3"><i class="bi bi-briefcase me-2"></i>Datos Laborales</h6>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="NumeroNomina" class="form-label">Número de Nómina *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-hash"></i></span>
                                    <input asp-for="NumeroNomina" class="form-control" placeholder="EMP-001" />
                                </div>
                                <span asp-validation-for="NumeroNomina" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Puesto" class="form-label">Puesto *</label>
                                <input asp-for="Puesto" class="form-control" placeholder="Supervisor de Obra" />
                                <span asp-validation-for="Puesto" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="IdProyecto" class="form-label">Proyecto Asignado *</label>
                                <select asp-for="IdProyecto" class="form-select" asp-items="@ViewBag.Proyectos">
                                    <option value="">-- Seleccionar --</option>
                                </select>
                                <span asp-validation-for="IdProyecto" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Estado</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                    <label class="form-check-label" asp-for="Activo">Empleado Activo</label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg me-1"></i> Guardar Empleado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}