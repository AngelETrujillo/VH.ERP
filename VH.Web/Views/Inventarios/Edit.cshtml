@model VH.Services.DTOs.InventarioRequestDto

@{
    ViewData["Title"] = "Editar Inventario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Registro de Inventario</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <strong>Material:</strong> @ViewBag.NombreMaterial<br />
                        <strong>Almacén:</strong> @ViewBag.NombreAlmacen
                    </div>

                    <form asp-action="Edit" asp-route-id="@ViewBag.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="IdAlmacen" />
                        <input type="hidden" asp-for="IdMaterial" />

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Existencia" class="form-label">Existencia Actual *</label>
                                <input asp-for="Existencia" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Existencia" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="StockMaximo" class="form-label">Stock Máximo</label>
                                <input asp-for="StockMaximo" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UbicacionPasillo" class="form-label">Ubicación / Pasillo</label>
                            <input asp-for="UbicacionPasillo" class="form-control" />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}