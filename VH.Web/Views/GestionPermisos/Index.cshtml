@model IEnumerable<VH.Services.DTOs.Rol.RolResponseDto>
@{
    ViewData["Title"] = "Gestión de Permisos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-key"></i> Gestión de Permisos por Rol</h4>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <p class="text-muted mb-4">Seleccione un rol para configurar sus permisos de acceso a los módulos del sistema.</p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Rol</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th width="150">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rol in Model)
                    {
                        <tr>
                            <td><strong>@rol.Name</strong></td>
                            <td>@rol.Descripcion</td>
                            <td>
                                @if (rol.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Asignar" asp-route-id="@rol.Id" class="btn btn-primary btn-sm">
                                    <i class="bi bi-gear"></i> Configurar Permisos
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>