@model IEnumerable<VH.Services.DTOs.UnidadMedidaResponseDto>
@{
    ViewData["Title"] = "Unidades de Medida";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-rulers text-primary me-2"></i>Unidades de Medida
            </h2>
            <p class="text-muted mb-0">Catálogo de unidades para materiales y partidas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Nueva Unidad
        </a>
    </div>

    <!-- Alertas -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por nombre o abreviatura...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-secondary">@Model?.Count() registros</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Unidad de Medida</th>
                            <th>Abreviatura</th>
                            <th>Descripción</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-primary-subtle text-primary me-3">
                                                <i class="bi bi-rulers"></i>
                                            </div>
                                            <h6 class="mb-0 fw-semibold">@item.Nombre</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-dark fs-6 px-3 py-2">@item.Abreviatura</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Descripcion))
                                        {
                                            <span class="text-muted">@item.Descripcion.Truncate(50)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin descripción</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdUnidadMedida"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdUnidadMedida"
                                               class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdUnidadMedida"
                                               class="btn btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">
                                    <div class="text-center py-5">
                                        <i class="bi bi-rulers display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay unidades de medida registradas</h5>
                                        <p class="text-muted">Comienza creando tu primera unidad</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-2"></i>Crear Unidad
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
    </script>
}