@model VH.Services.DTOs.InventarioResponseDto
@{
    ViewData["Title"] = "Eliminar Inventario";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <!-- Tarjeta de confirmación -->
            <div class="card shadow border-0">
                <div class="card-body p-0">
                    <!-- Header de advertencia -->
                    <div class="bg-danger text-white p-4 text-center">
                        <i class="bi bi-exclamation-triangle display-4"></i>
                        <h3 class="mt-3 mb-0 fw-bold">¿Eliminar Registro?</h3>
                        <p class="mb-0 opacity-75">Esta acción no se puede deshacer</p>
                    </div>

                    <!-- Datos del inventario -->
                    <div class="p-4">
                        <div class="d-flex align-items-center p-3 bg-light rounded mb-4">
                            <div class="icon-circle bg-danger text-white me-3">
                                <i class="bi bi-boxes"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">@Model.NombreMaterial</h5>
                                <small class="text-muted">@Model.NombreAlmacen</small>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label class="text-muted small">Existencia Actual</label>
                                <p class="mb-0 fw-semibold fs-5">@Model.Existencia @Model.UnidadMedidaMaterial</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Stock Mínimo</label>
                                <p class="mb-0 fw-semibold">@Model.StockMinimo</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.UbicacionPasillo))
                            {
                                <div class="col-12">
                                    <label class="text-muted small">Ubicación</label>
                                    <p class="mb-0 fw-semibold">@Model.UbicacionPasillo</p>
                                </div>
                            }
                        </div>

                        <!-- Alerta -->
                        <div class="alert alert-warning border-0 mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> Al eliminar este registro:
                            <ul class="mb-0 mt-2">
                                <li>Se perderá la configuración de stock mínimo/máximo</li>
                                <li>Las compras y entregas históricas se mantendrán</li>
                            </ul>
                        </div>

                        <!-- Botones -->
                        <form asp-action="Delete" asp-route-id="@Model.IdInventario">
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg px-4">
                                    <i class="bi bi-trash me-2"></i>Sí, Eliminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }
</style>