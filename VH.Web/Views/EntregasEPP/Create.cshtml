@model VH.Services.DTOs.EntregaEPPRequestDto

@{
    ViewData["Title"] = "Nueva Entrega de EPP";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-plus"></i> Registrar Nueva Entrega de EPP</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdEmpleado" class="form-label">Empleado *</label>
                                <select asp-for="IdEmpleado" class="form-select" asp-items="@ViewBag.Empleados">
                                    <option value="">-- Seleccionar Empleado --</option>
                                </select>
                                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaEntrega" class="form-label">Fecha de Entrega *</label>
                                <input asp-for="FechaEntrega" type="date" class="form-control" />
                                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Material EPP *</label>
                                <select id="selectMaterial" class="form-select" asp-items="@ViewBag.Materiales">
                                    <option value="">-- Seleccionar Material --</option>
                                </select>
                                <small class="text-muted">Seleccione primero el material para ver los lotes disponibles</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Almacén *</label>
                                <select id="selectAlmacen" class="form-select" asp-items="@ViewBag.Almacenes">
                                    <option value="">-- Seleccionar Almacén --</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="IdCompra" class="form-label">Lote Disponible *</label>
                                <select asp-for="IdCompra" class="form-select" id="selectLote">
                                    <option value="">-- Seleccione Material y Almacén primero --</option>
                                </select>
                                <span asp-validation-for="IdCompra" class="text-danger"></span>
                                <small class="text-muted">Muestra lotes con existencia disponible</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CantidadEntregada" class="form-label">Cantidad *</label>
                                <input asp-for="CantidadEntregada" type="number" step="0.01" min="0.01" class="form-control" />
                                <span asp-validation-for="CantidadEntregada" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TallaEntregada" class="form-label">Talla</label>
                                <select asp-for="TallaEntregada" class="form-select">
                                    <option value="">N/A</option>
                                    <option value="XS">XS</option>
                                    <option value="S">S</option>
                                    <option value="M">M</option>
                                    <option value="L">L</option>
                                    <option value="XL">XL</option>
                                    <option value="XXL">XXL</option>
                                    <option value="Unitalla">Unitalla</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="2"
                                      placeholder="Observaciones adicionales sobre la entrega"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i> Registrar Entrega
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selectMaterial = document.getElementById('selectMaterial');
            const selectAlmacen = document.getElementById('selectAlmacen');
            const selectLote = document.getElementById('selectLote');

            async function cargarLotes() {
                const idMaterial = selectMaterial.value;
                const idAlmacen = selectAlmacen.value;

                selectLote.innerHTML = '<option value="">-- Cargando... --</option>';

                if (!idMaterial || !idAlmacen) {
                    selectLote.innerHTML = '<option value="">-- Seleccione Material y Almacén primero --</option>';
                    return;
                }

                try {
                    const response = await fetch(`https://localhost:7088/api/comprasepp/lotes-disponibles?idMaterial=${idMaterial}&idAlmacen=${idAlmacen}`);
                    const lotes = await response.json();

                    if (lotes.length === 0) {
                        selectLote.innerHTML = '<option value="">-- No hay lotes disponibles --</option>';
                        return;
                    }

                    selectLote.innerHTML = '<option value="">-- Seleccionar Lote --</option>';
                    lotes.forEach(lote => {
                        const option = document.createElement('option');
                        option.value = lote.idCompra;
                        option.textContent = lote.descripcion;
                        selectLote.appendChild(option);
                    });
                } catch (error) {
                    selectLote.innerHTML = '<option value="">-- Error al cargar lotes --</option>';
                }
            }

            selectMaterial.addEventListener('change', cargarLotes);
            selectAlmacen.addEventListener('change', cargarLotes);
        });
    </script>
}