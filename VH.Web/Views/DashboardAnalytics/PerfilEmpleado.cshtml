@model VH.Services.DTOs.Analytics.PerfilConsumoEmpleadoDto
@{
    ViewData["Title"] = $"Perfil de {Model.NombreCompleto}";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-person-circle text-primary me-2"></i>@Model.NombreCompleto
            </h2>
            <p class="text-muted mb-0">@Model.NumeroNomina | @Model.Puesto | @Model.NombreProyecto</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="display-4 fw-bold text-@(Model.PuntuacionRiesgo >= 60 ? "danger" : Model.PuntuacionRiesgo >= 40 ? "warning" : "success")">
                        @Model.PuntuacionRiesgo.ToString("N0")
                    </div>
                    <p class="text-muted mb-0">Puntuación de Riesgo</p>
                    <span class="badge bg-@(Model.PuntuacionRiesgo >= 60 ? "danger" : Model.PuntuacionRiesgo >= 40 ? "warning" : "success") mt-2">
                        @Model.NivelRiesgo
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="display-6 fw-bold text-primary">@Model.CostoTotalHistorico.ToString("C")</div>
                    <p class="text-muted mb-0">Costo Total Histórico</p>
                    <small class="text-muted">@Model.TotalEntregasHistorico entregas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="display-6 fw-bold text-info">@Model.PromedioMensual.ToString("C")</div>
                    <p class="text-muted mb-0">Promedio Mensual</p>
                    <small class="text-muted">vs grupo: @Model.PromedioGrupoPuesto.ToString("C")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="display-6 fw-bold text-warning">@Model.AlertasPendientes</div>
                    <p class="text-muted mb-0">Alertas Pendientes</p>
                    <small class="text-muted">@Model.AlertasConfirmadas confirmadas | @Model.AlertasDescartadas descartadas</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Historial de Consumo Mensual</h5>
                </div>
                <div class="card-body">
                    <canvas id="chartHistorial" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Materiales Frecuentes</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var material in Model.MaterialesFrecuentes.Take(5))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@material.NombreMaterial</strong>
                                    <br><small class="text-muted">@material.VecesSolicitado veces | @material.CantidadTotal unidades</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">@material.CostoTotal.ToString("C")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Últimas Entregas</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Material</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Costo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entrega in Model.UltimasEntregas)
                                {
                                    <tr>
                                        <td>@entrega.FechaEntrega.ToString("dd/MM/yyyy")</td>
                                        <td>@entrega.NombreMaterial</td>
                                        <td class="text-center">@entrega.Cantidad</td>
                                        <td class="text-end">@entrega.Costo.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Alertas Recientes</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Descripción</th>
                                    <th class="text-center">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.AlertasRecientes.Any())
                                {
                                    @foreach (var alerta in Model.AlertasRecientes)
                                    {
                                        <tr>
                                            <td><small>@alerta.FechaGeneracion.ToString("dd/MM/yyyy")</small></td>
                                            <td><span class="badge bg-@alerta.ColorSeveridad">@alerta.Severidad</span></td>
                                            <td><small>@alerta.Descripcion.Substring(0, Math.Min(50, alerta.Descripcion.Length))...</small></td>
                                            <td class="text-center"><small>@alerta.Estado</small></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-3">Sin alertas</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información del Empleado</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <p class="mb-1 text-muted">Fecha de Ingreso</p>
                    <p class="fw-bold">@(Model.FechaIngreso?.ToString("dd/MM/yyyy") ?? "No registrada")</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1 text-muted">Días en la Empresa</p>
                    <p class="fw-bold">@Model.DiasEnEmpresa días</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1 text-muted">Último Cálculo de Riesgo</p>
                    <p class="fw-bold">@(Model.FechaUltimoCalculoRiesgo?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1 text-muted">Desviación vs Grupo</p>
                    <p class="fw-bold @(Model.DesviacionVsGrupo > 0 ? "text-danger" : "text-success")">
                        @(Model.DesviacionVsGrupo > 0 ? "+" : "")@Model.DesviacionVsGrupo.ToString("N1")%
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var historialData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.HistorialMensual));
            
            if (historialData.length > 0) {
                var ctx = document.getElementById('chartHistorial').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: historialData.map(h => h.periodo),
                        datasets: [{
                            label: 'Costo Mensual',
                            data: historialData.map(h => h.costoTotal),
                            backgroundColor: historialData.map(h => h.alertasGeneradas > 0 ? 'rgba(220, 53, 69, 0.7)' : 'rgba(13, 110, 253, 0.7)'),
                            borderColor: historialData.map(h => h.alertasGeneradas > 0 ? '#dc3545' : '#0d6efd'),
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '$' + value.toLocaleString();
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
}
