@model IEnumerable<VH.Services.DTOs.EntregaEPPResponseDto>
@{
    ViewData["Title"] = "Entregas EPP";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-clipboard-check-fill text-primary me-2"></i>Entregas de EPP
            </h2>
            <p class="text-muted mb-0">Registro de entregas de equipos de protección a empleados</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Nueva Entrega
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null || ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@(TempData["ErrorMessage"] ?? ViewBag.ErrorMessage)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtro por Empleado -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body py-3">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small fw-semibold">Filtrar por Empleado</label>
                    <select name="idEmpleado" class="form-select" asp-items="@ViewBag.EmpleadosFiltro">
                        <option value="">-- Todos los empleados --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-secondary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por empleado, material...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-secondary">@Model?.Count() registros</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Fecha</th>
                            <th>Empleado</th>
                            <th>Material</th>
                            <th class="text-center">Cantidad</th>
                            <th>Talla</th>
                            <th>Almacén</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-success-subtle text-success me-3">
                                                <i class="bi bi-clipboard-check"></i>
                                            </div>
                                            <div>
                                                <span class="fw-semibold">@item.FechaEntrega.ToString("dd/MM/yyyy")</span>
                                                <br><small class="text-muted">@item.FechaEntrega.ToString("dddd")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-semibold">@item.NombreCompletoEmpleado</span>
                                            <br><small class="text-muted"><i class="bi bi-credit-card me-1"></i>@item.NumeroNominaEmpleado</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary-subtle text-primary">
                                            <i class="bi bi-shield-check me-1"></i>@item.NombreMaterial
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold fs-5">@item.CantidadEntregada</span>
                                        <br><small class="text-muted">@item.UnidadMedidaMaterial</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TallaEntregada))
                                        {
                                            <span class="badge bg-secondary">@item.TallaEntregada</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info">
                                            <i class="bi bi-box-seam me-1"></i>@item.NombreAlmacen
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdEntrega"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdEntrega"
                                               class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdEntrega"
                                               class="btn btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">
                                    <div class="text-center py-5">
                                        <i class="bi bi-clipboard-x display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay entregas registradas</h5>
                                        <p class="text-muted">Comienza registrando la primera entrega de EPP</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-2"></i>Nueva Entrega
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
    </script>
}