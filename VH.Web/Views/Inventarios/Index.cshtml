@model IEnumerable<VH.Services.DTOs.InventarioResponseDto>
@{
    ViewData["Title"] = "Inventarios";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-boxes text-primary me-2"></i>Control de Inventarios
            </h2>
            <p class="text-muted mb-0">Existencias de materiales EPP por almacén</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Nuevo Registro
        </a>
    </div>

    <!-- Alertas -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Resumen de alertas -->
    @if (Model != null && Model.Any())
    {
        var stockBajo = Model.Count(i => i.Existencia <= i.StockMinimo && i.Existencia > 0);
        var sinStock = Model.Count(i => i.Existencia == 0);
        var stockAlto = Model.Count(i => i.StockMaximo > 0 && i.Existencia > i.StockMaximo);

        @if (stockBajo > 0 || sinStock > 0 || stockAlto > 0)
        {
            <div class="row g-3 mb-4">
                @if (sinStock > 0)
                {
                    <div class="col-md-4">
                        <div class="alert alert-danger mb-0 d-flex align-items-center">
                            <i class="bi bi-x-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>@sinStock</strong> materiales sin stock
                            </div>
                        </div>
                    </div>
                }
                @if (stockBajo > 0)
                {
                    <div class="col-md-4">
                        <div class="alert alert-warning mb-0 d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                            <div>
                                <strong>@stockBajo</strong> materiales con stock bajo
                            </div>
                        </div>
                    </div>
                }
                @if (stockAlto > 0)
                {
                    <div class="col-md-4">
                        <div class="alert alert-info mb-0 d-flex align-items-center">
                            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>@stockAlto</strong> materiales sobre stock máximo
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por material o almacén...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filtroStock" id="filtroTodos" checked>
                        <label class="btn btn-outline-secondary btn-sm" for="filtroTodos">Todos</label>
                        <input type="radio" class="btn-check" name="filtroStock" id="filtroBajo">
                        <label class="btn btn-outline-warning btn-sm" for="filtroBajo">Stock Bajo</label>
                        <input type="radio" class="btn-check" name="filtroStock" id="filtroSinStock">
                        <label class="btn btn-outline-danger btn-sm" for="filtroSinStock">Sin Stock</label>
                    </div>
                    <span class="badge bg-secondary ms-3">@Model?.Count() registros</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Material</th>
                            <th>Almacén</th>
                            <th class="text-center">Existencia</th>
                            <th class="text-center">Mínimo</th>
                            <th class="text-center">Máximo</th>
                            <th class="text-center">Estado</th>
                            <th>Ubicación</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var estadoStock = "normal";
                                var badgeClass = "bg-success-subtle text-success";
                                var estadoTexto = "Normal";
                                var estadoIcono = "bi-check-circle";

                                if (item.Existencia == 0)
                                {
                                    estadoStock = "sinstock";
                                    badgeClass = "bg-danger-subtle text-danger";
                                    estadoTexto = "Sin Stock";
                                    estadoIcono = "bi-x-circle";
                                }
                                else if (item.Existencia <= item.StockMinimo)
                                {
                                    estadoStock = "bajo";
                                    badgeClass = "bg-warning-subtle text-warning";
                                    estadoTexto = "Stock Bajo";
                                    estadoIcono = "bi-exclamation-triangle";
                                }
                                else if (item.StockMaximo > 0 && item.Existencia > item.StockMaximo)
                                {
                                    estadoStock = "alto";
                                    badgeClass = "bg-info-subtle text-info";
                                    estadoTexto = "Excedido";
                                    estadoIcono = "bi-arrow-up-circle";
                                }

                                <tr data-estado="@estadoStock">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-primary-subtle text-primary me-3">
                                                <i class="bi bi-shield-check"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@item.NombreMaterial</h6>
                                                <small class="text-muted">@item.UnidadMedidaMaterial</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info">
                                            <i class="bi bi-box-seam me-1"></i>@item.NombreAlmacen
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="fs-5 fw-bold @(item.Existencia == 0 ? "text-danger" : item.Existencia <= item.StockMinimo ? "text-warning" : "text-success")">
                                            @item.Existencia
                                        </span>
                                    </td>
                                    <td class="text-center text-muted">@item.StockMinimo</td>
                                    <td class="text-center text-muted">@(item.StockMaximo > 0 ? item.StockMaximo.ToString() : "-")</td>
                                    <td class="text-center">
                                        <span class="badge @badgeClass px-3 py-2">
                                            <i class="bi @estadoIcono me-1"></i>@estadoTexto
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.UbicacionPasillo))
                                        {
                                            <small><i class="bi bi-geo-alt text-muted me-1"></i>@item.UbicacionPasillo</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdInventario"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdInventario"
                                               class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdInventario"
                                               class="btn btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    <div class="text-center py-5">
                                        <i class="bi bi-boxes display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay registros de inventario</h5>
                                        <p class="text-muted">El inventario se crea automáticamente con las compras</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-2"></i>Crear Registro
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
        document.querySelectorAll('input[name="filtroStock"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const filtro = this.id.replace('filtro', '').toLowerCase();
                document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                    const estado = row.dataset.estado;
                    if (filtro === 'todos') row.style.display = '';
                    else if (filtro === 'bajo') row.style.display = (estado === 'bajo' || estado === 'sinstock') ? '' : 'none';
                    else if (filtro === 'sinstock') row.style.display = estado === 'sinstock' ? '' : 'none';
                });
            });
        });
    </script>
}