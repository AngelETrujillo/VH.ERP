@model VH.Services.DTOs.CompraEPPRequestDto

@{
    ViewData["Title"] = "Nueva Compra de EPP";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-cart-plus"></i> Registrar Nueva Compra de EPP</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdMaterial" class="form-label">Material EPP *</label>
                                <select asp-for="IdMaterial" class="form-select" asp-items="@ViewBag.Materiales">
                                    <option value="">-- Seleccionar Material --</option>
                                </select>
                                <span asp-validation-for="IdMaterial" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdProveedor" class="form-label">Proveedor *</label>
                                <select asp-for="IdProveedor" class="form-select" asp-items="@ViewBag.Proveedores">
                                    <option value="">-- Seleccionar Proveedor --</option>
                                </select>
                                <span asp-validation-for="IdProveedor" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdAlmacen" class="form-label">Almacén Destino *</label>
                                <select asp-for="IdAlmacen" class="form-select" asp-items="@ViewBag.Almacenes">
                                    <option value="">-- Seleccionar Almacén --</option>
                                </select>
                                <span asp-validation-for="IdAlmacen" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaCompra" class="form-label">Fecha de Compra *</label>
                                <input asp-for="FechaCompra" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="FechaCompra" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CantidadComprada" class="form-label">Cantidad *</label>
                                <input asp-for="CantidadComprada" type="number" step="0.01" min="0.01" class="form-control" />
                                <span asp-validation-for="CantidadComprada" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PrecioUnitario" class="form-label">Precio Unitario *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioUnitario" type="number" step="0.01" min="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Total</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="text" id="totalCompra" class="form-control" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumeroDocumento" class="form-label">Número de Documento/Factura</label>
                                <input asp-for="NumeroDocumento" class="form-control" placeholder="Ej: FAC-001234" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones adicionales"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i> Registrar Compra
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cantidad = document.getElementById('CantidadComprada');
            const precio = document.getElementById('PrecioUnitario');
            const total = document.getElementById('totalCompra');

            function calcularTotal() {
                const c = parseFloat(cantidad.value) || 0;
                const p = parseFloat(precio.value) || 0;
                total.value = (c * p).toFixed(2);
            }

            cantidad.addEventListener('input', calcularTotal);
            precio.addEventListener('input', calcularTotal);
        });
    </script>
}