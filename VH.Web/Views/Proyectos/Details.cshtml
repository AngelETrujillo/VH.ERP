<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><strong>@item.Nombre</strong></td>
            <td>
                <span class="badge bg-info">@item.TipoObra</span>
            </td>
            <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
            <td>
                @if (item.FechaFinEstimada.HasValue)
                {
                    @item.FechaFinEstimada.Value.ToString("dd/MM/yyyy")
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td class="text-end">@item.PresupuestoTotal.ToString("C2")</td>
            <td class="text-end">
                @if (item.PresupuestoEPPMensual.HasValue)
                {
                    @item.PresupuestoEPPMensual.Value.ToString("C2")
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>
                @if (item.Activo)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-warning" title="Editar">
                    <i class="bi bi-pencil"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-info" title="Ver">
                    <i class="bi bi-eye"></i>
                </a>
                <a asp-controller="Partidas" asp-action="Index" asp-route-idProyecto="@item.IdProyecto" class="btn btn-sm btn-outline-primary" title="Partidas">
                    <i class="bi bi-list-ul"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.IdProyecto" class="btn btn-sm btn-outline-danger" title="Eliminar">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
    }
</tbody>