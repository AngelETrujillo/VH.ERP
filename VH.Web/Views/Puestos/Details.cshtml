@model VH.Services.DTOs.Analytics.PuestoResponseDto
@{
    ViewData["Title"] = "Detalle del Puesto";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-person-badge text-primary me-2"></i>Detalle del Puesto
            </h2>
            <p class="text-muted mb-0">Información completa del puesto de trabajo</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información del Puesto</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Descripcion) ? "-" : Model.Descripcion)</dd>

                        <dt class="col-sm-4">Nivel de Riesgo EPP:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.NivelRiesgoEPP)
                            {
                                case VH.Services.Entities.NivelRiesgoEPP.Alto:
                                    <span class="badge bg-danger">Alto</span>
                                    break;
                                case VH.Services.Entities.NivelRiesgoEPP.Medio:
                                    <span class="badge bg-warning">Medio</span>
                                    break;
                                default:
                                    <span class="badge bg-success">Bajo</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Empleados Asignados:</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Model.TotalEmpleados</span></dd>
                    </dl>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                        <a asp-action="Edit" asp-route-id="@Model.IdPuesto" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>