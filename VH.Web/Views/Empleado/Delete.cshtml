@model VH.Services.DTOs.EmpleadoResponseDto
@{
    ViewData["Title"] = "Eliminar Empleado";
    var iniciales = $"{Model.Nombre?.FirstOrDefault()}{Model.ApellidoPaterno?.FirstOrDefault()}".ToUpper();
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Tarjeta de confirmación -->
            <div class="card shadow border-0">
                <div class="card-body p-0">
                    <!-- Header de advertencia -->
                    <div class="bg-danger text-white p-4 text-center">
                        <i class="bi bi-exclamation-triangle display-4"></i>
                        <h3 class="mt-3 mb-0 fw-bold">¿Eliminar Empleado?</h3>
                        <p class="mb-0 opacity-75">Esta acción no se puede deshacer</p>
                    </div>

                    <!-- Datos del empleado -->
                    <div class="p-4">
                        <div class="d-flex align-items-center p-3 bg-light rounded mb-4">
                            <div class="avatar-circle bg-danger text-white me-3">@iniciales</div>
                            <div>
                                <h5 class="mb-0 fw-bold">@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h5>
                                <small class="text-muted">@Model.Puesto</small>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label class="text-muted small">No. Nómina</label>
                                <p class="mb-0 fw-semibold">@Model.NumeroNomina</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Proyecto</label>
                                <p class="mb-0 fw-semibold">@(string.IsNullOrEmpty(Model.NombreProyecto) ? "Sin asignar" : Model.NombreProyecto)</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Estado</label>
                                <p class="mb-0">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Alerta -->
                        <div class="alert alert-warning border-0 mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> Al eliminar este empleado se perderán todos sus datos.
                            El historial de entregas de EPP asociado permanecerá en el sistema.
                        </div>

                        <!-- Botones -->
                        <form asp-action="Delete" asp-route-id="@Model.IdEmpleado">
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg px-4">
                                    <i class="bi bi-trash me-2"></i>Sí, Eliminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }
</style>