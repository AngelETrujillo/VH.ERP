@model IEnumerable<VH.Services.DTOs.MaterialEPPResponseDto>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Inventario de Materiales EPP</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nuevo Material</a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Costo Est.</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Nombre</strong></td>
                            <td>$@item.CostoUnitarioEstimado</td>
                            <td>
                                <span class="badge @(item.Activo ? "bg-success" : "bg-secondary")">
                                    @(item.Activo ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IdMaterial" class="btn btn-sm btn-outline-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdMaterial" class="btn btn-sm btn-outline-info">Ver</a>
                                <a asp-action="Delete" asp-route-id="@item.IdMaterial" class="btn btn-sm btn-outline-danger">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>