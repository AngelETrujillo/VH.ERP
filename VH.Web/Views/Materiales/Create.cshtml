@model VH.Services.DTOs.MaterialEPPRequestDto
@{
    ViewData["Title"] = "Nuevo Material EPP";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-shield-plus text-primary me-2"></i>Nuevo Material EPP
            </h2>
            <p class="text-muted mb-0">Registre un nuevo equipo de protección personal</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Información del Material -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Información del Material</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre del Material <span class="text-danger">*</span></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej: Casco de seguridad industrial" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada del material, especificaciones técnicas, etc."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Unidad y Costo -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-currency-dollar me-2"></i>Unidad y Costo</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="IdUnidadMedida" class="form-label fw-semibold">Unidad de Medida <span class="text-danger">*</span></label>
                                <select asp-for="IdUnidadMedida" class="form-select form-select-lg" asp-items="@ViewBag.UnidadesMedida">
                                    <option value="">-- Seleccionar --</option>
                                </select>
                                <span asp-validation-for="IdUnidadMedida" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CostoUnitarioEstimado" class="form-label fw-semibold">Costo Unitario Estimado</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="CostoUnitarioEstimado" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="CostoUnitarioEstimado" class="text-danger small"></span>
                                <small class="text-muted">Costo de referencia para presupuestos</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estado -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="form-check form-switch">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" id="switchActivo" checked>
                            <label class="form-check-label fw-semibold" for="switchActivo">
                                <i class="bi bi-toggle-on text-success me-2"></i>Material Activo
                            </label>
                            <p class="text-muted small mb-0 ms-4">El material estará disponible para compras y entregas</p>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-check-lg me-2"></i>Guardar Material
                    </button>
                </div>
            </form>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-primary mb-3">
                        <i class="bi bi-info-circle me-2"></i>Información
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Los campos con <span class="text-danger">*</span> son obligatorios</li>
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>El costo estimado es solo referencial</li>
                        <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>El costo real se registra en cada compra</li>
                        <li><i class="bi bi-check2 text-success me-2"></i>El stock se actualiza automáticamente</li>
                    </ul>
                </div>
            </div>

            <div class="card border-0 bg-info-subtle mt-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-info mb-2">
                        <i class="bi bi-lightbulb me-2"></i>Ejemplos de EPP
                    </h6>
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-white text-dark border">Casco</span>
                        <span class="badge bg-white text-dark border">Guantes</span>
                        <span class="badge bg-white text-dark border">Lentes</span>
                        <span class="badge bg-white text-dark border">Chaleco</span>
                        <span class="badge bg-white text-dark border">Botas</span>
                        <span class="badge bg-white text-dark border">Arnés</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}