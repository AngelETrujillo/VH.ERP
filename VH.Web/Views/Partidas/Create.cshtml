@model VH.Services.DTOs.ConceptoPartidaRequestDto

@{
    ViewData["Title"] = "Crear Nueva Partida";
    var idProyecto = ViewBag.IdProyecto;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Nueva Partida</h5>
                    <small>Proyecto ID: @idProyecto</small>
                </div>
                <div class="card-body">
                    <form asp-controller="Partidas" asp-action="Create" asp-route-idProyecto="@idProyecto">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción *</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"
                                      placeholder="Descripción de la partida"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdUnidadMedida" class="form-label">Unidad de Medida *</label>
                                <select asp-for="IdUnidadMedida" class="form-select" asp-items="@ViewBag.UnidadesMedida">
                                    <option value="">-- Seleccionar Unidad --</option>
                                </select>
                                <span asp-validation-for="IdUnidadMedida" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CantidadEstimada" class="form-label">Cantidad Estimada *</label>
                                <input asp-for="CantidadEstimada" type="number" step="0.0001" min="0.01" class="form-control" />
                                <span asp-validation-for="CantidadEstimada" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" asp-route-idProyecto="@idProyecto" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i> Crear Partida
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}