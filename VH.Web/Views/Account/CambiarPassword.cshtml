@model VH.Services.DTOs.Auth.CambioPasswordDto
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-key"></i> Cambiar Contraseña</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CambiarPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="PasswordActual" class="form-label">Contraseña Actual</label>
                            <input asp-for="PasswordActual" type="password" class="form-control" />
                            <span asp-validation-for="PasswordActual" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordNuevo" class="form-label">Nueva Contraseña</label>
                            <input asp-for="PasswordNuevo" type="password" class="form-control" />
                            <span asp-validation-for="PasswordNuevo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmarPassword" class="form-label">Confirmar Nueva Contraseña</label>
                            <input asp-for="ConfirmarPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Guardar
                            </button>
                            <a asp-action="Perfil" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}