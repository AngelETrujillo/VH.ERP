@model VH.Services.DTOs.UnidadMedidaResponseDto
@{
    ViewData["Title"] = "Eliminar Unidad de Medida";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <!-- Tarjeta de confirmación -->
            <div class="card shadow border-0">
                <div class="card-body p-0">
                    <!-- Header de advertencia -->
                    <div class="bg-danger text-white p-4 text-center">
                        <i class="bi bi-exclamation-triangle display-4"></i>
                        <h3 class="mt-3 mb-0 fw-bold">¿Eliminar Unidad?</h3>
                        <p class="mb-0 opacity-75">Esta acción no se puede deshacer</p>
                    </div>

                    <!-- Datos -->
                    <div class="p-4">
                        <div class="d-flex align-items-center p-3 bg-light rounded mb-4">
                            <div class="icon-circle bg-danger text-white me-3">
                                <i class="bi bi-rulers"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">@Model.Nombre</h5>
                                <span class="badge bg-dark">@Model.Abreviatura</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Descripcion))
                        {
                            <div class="mb-4">
                                <label class="text-muted small">Descripción</label>
                                <p class="mb-0">@Model.Descripcion</p>
                            </div>
                        }

                        <!-- Alerta -->
                        <div class="alert alert-warning border-0 mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> No podrá eliminar esta unidad si está siendo utilizada por materiales o partidas.
                        </div>

                        <!-- Botones -->
                        <form asp-action="Delete" asp-route-id="@Model.IdUnidadMedida">
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg px-4">
                                    <i class="bi bi-trash me-2"></i>Sí, Eliminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }
</style>