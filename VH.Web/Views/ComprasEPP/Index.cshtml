@model IEnumerable<VH.Services.DTOs.CompraEPPResponseDto>
@{
    ViewData["Title"] = "Compras EPP";
    var esSuperAdmin = User.IsInRole("SuperAdmin");
    var puedeCrear = PermisoHelper.PuedeCrear(Context.Session, "EMPLEADOS", esSuperAdmin);
    var puedeEditar = PermisoHelper.PuedeEditar(Context.Session, "EMPLEADOS", esSuperAdmin);
    var puedeEliminar = PermisoHelper.PuedeEliminar(Context.Session, "EMPLEADOS", esSuperAdmin);
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-cart-plus-fill text-primary me-2"></i>Compras de EPP
            </h2>
            <p class="text-muted mb-0">Registro de compras de equipos de protección personal</p>
        </div>
        @if(puedeCrear){
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Nueva Compra
            </a>
        }
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null || ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@(TempData["ErrorMessage"] ?? ViewBag.ErrorMessage)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Material</label>
                    <select name="idMaterial" class="form-select" asp-items="@ViewBag.Materiales">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Proveedor</label>
                    <select name="idProveedor" class="form-select" asp-items="@ViewBag.Proveedores">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-semibold">Almacén</label>
                    <select name="idAlmacen" class="form-select" asp-items="@ViewBag.Almacenes">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-secondary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-secondary">@Model?.Count() registros</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Fecha</th>
                            <th>Material</th>
                            <th>Proveedor</th>
                            <th>Almacén</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">P. Unitario</th>
                            <th class="text-end">Total</th>
                            <th class="text-center">Disponible</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var porcentajeDisponible = item.CantidadComprada > 0
                                ? (item.CantidadDisponible / item.CantidadComprada) * 100
                                : 0;
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-success-subtle text-success me-3">
                                                <i class="bi bi-cart-check"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@item.FechaCompra.ToString("dd/MM/yyyy")</h6>
                                                @if (!string.IsNullOrEmpty(item.NumeroDocumento))
                                                {
                                                    <small class="text-muted">Doc: @item.NumeroDocumento</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-semibold">@item.NombreMaterial</span>
                                        <br><small class="text-muted">@item.UnidadMedidaMaterial</small>
                                    </td>
                                    <td>@item.NombreProveedor</td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info">
                                            <i class="bi bi-box-seam me-1"></i>@item.NombreAlmacen
                                        </span>
                                    </td>
                                    <td class="text-center fw-semibold">@item.CantidadComprada</td>
                                    <td class="text-end">@item.PrecioUnitario.ToString("C2")</td>
                                    <td class="text-end fw-bold text-success">@item.CostoTotal.ToString("C2")</td>
                                    <td class="text-center">
                                        @if (item.CantidadDisponible > 0)
                                        {
                                            <span class="badge bg-success-subtle text-success">
                                                @item.CantidadDisponible
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary">Agotado</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdCompra"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if(puedeEditar)
                                            {                                                
                                                <a asp-action="Edit" asp-route-id="@item.IdCompra"
                                                   class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                            @if (puedeEliminar)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.IdCompra"
                                                   class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9">
                                    <div class="text-center py-5">
                                        <i class="bi bi-cart-x display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay compras registradas</h5>
                                        <p class="text-muted">Comienza registrando tu primera compra de EPP</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-2"></i>Nueva Compra
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }