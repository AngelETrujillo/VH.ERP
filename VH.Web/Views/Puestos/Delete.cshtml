@model VH.Services.DTOs.Analytics.PuestoResponseDto
@{
    ViewData["Title"] = "Eliminar Puesto";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-trash text-danger me-2"></i>Eliminar Puesto
            </h2>
            <p class="text-muted mb-0">¿Está seguro de eliminar este puesto?</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="form-label text-muted">Nombre</label>
                        <p class="fw-bold fs-5">@Model.Nombre</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Descripción</label>
                        <p>@(Model.Descripcion ?? "Sin descripción")</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Nivel de Riesgo</label>
                        <p><span class="badge bg-@(Model.NivelRiesgoEPP == VH.Services.Entities.NivelRiesgoEPP.Alto ? "danger" : Model.NivelRiesgoEPP == VH.Services.Entities.NivelRiesgoEPP.Medio ? "warning" : "success")">@Model.NivelRiesgoTexto</span></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Empleados Asignados</label>
                        <p><span class="badge bg-secondary">@Model.TotalEmpleados</span></p>
                    </div>

                    @if (Model.TotalEmpleados > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Este puesto tiene <strong>@Model.TotalEmpleados empleados</strong> asignados.
                            No podrá eliminarse hasta que los empleados sean reasignados a otro puesto.
                        </div>
                    }
                </div>
                <div class="card-footer bg-white py-3">
                    <form asp-action="Delete" asp-route-id="@Model.IdPuesto" method="post">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger" @(Model.TotalEmpleados > 0 ? "disabled" : "")>
                                <i class="bi bi-trash me-1"></i>Eliminar Puesto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
