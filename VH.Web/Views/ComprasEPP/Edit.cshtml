@model VH.Services.DTOs.CompraEPPRequestDto

@{
    ViewData["Title"] = "Editar Compra de EPP";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Compra de EPP</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Nota:</strong> Solo se pueden editar la fecha, precio, documento y observaciones.
                        La cantidad y disponibilidad no se pueden modificar una vez registrada la compra.
                        <br><strong>Cantidad Disponible:</strong> @ViewBag.CantidadDisponible
                    </div>

                    <form asp-action="Edit" asp-route-id="@ViewBag.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="IdMaterial" />
                        <input type="hidden" asp-for="IdProveedor" />
                        <input type="hidden" asp-for="IdAlmacen" />
                        <input type="hidden" asp-for="CantidadComprada" />

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Material</label>
                                <select class="form-select" disabled>
                                    @foreach (var item in ViewBag.Materiales as List<SelectListItem> ?? new List<SelectListItem>())
                                    {
                                        if (item.Value == Model.IdMaterial.ToString())
                                        {
                                            <option selected>@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Proveedor</label>
                                <select class="form-select" disabled>
                                    @foreach (var item in ViewBag.Proveedores as List<SelectListItem> ?? new List<SelectListItem>())
                                    {
                                        if (item.Value == Model.IdProveedor.ToString())
                                        {
                                            <option selected>@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Almacén</label>
                                <select class="form-select" disabled>
                                    @foreach (var item in ViewBag.Almacenes as List<SelectListItem> ?? new List<SelectListItem>())
                                    {
                                        if (item.Value == Model.IdAlmacen.ToString())
                                        {
                                            <option selected>@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="FechaCompra" class="form-label">Fecha de Compra *</label>
                                <input asp-for="FechaCompra" type="date" class="form-control" />
                                <span asp-validation-for="FechaCompra" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Cantidad Comprada</label>
                                <input type="text" class="form-control" value="@Model.CantidadComprada" disabled />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PrecioUnitario" class="form-label">Precio Unitario *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioUnitario" type="number" step="0.01" min="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumeroDocumento" class="form-label">Número de Documento/Factura</label>
                                <input asp-for="NumeroDocumento" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}