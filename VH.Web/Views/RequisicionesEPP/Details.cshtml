@model VH.Services.DTOs.RequisicionEPPResponseDto
@{
    ViewData["Title"] = $"Requisición {Model.NumeroRequisicion}";
    var esSuperAdmin = User.IsInRole("SuperAdmin");
    var esAdmin = User.IsInRole("Administrador");
    var puedeEditar = PermisoHelper.PuedeEditar(Context.Session, "REQUISICIONES_EPP", esSuperAdmin);
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div class="flex-grow-1">
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-file-earmark-text text-primary me-2"></i>@Model.NumeroRequisicion
            </h2>
            <p class="text-muted mb-0">Detalle de la requisición</p>
        </div>
        <span class="badge bg-@Model.EstadoClase fs-6 px-3 py-2">@Model.EstadoTexto</span>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Información General -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información General</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-semibold">N° Requisición</label>
                            <p class="fs-5 mb-0 fw-bold text-primary">@Model.NumeroRequisicion</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-semibold">Fecha Solicitud</label>
                            <p class="fs-5 mb-0">@Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-semibold">Solicitante</label>
                            <p class="fs-5 mb-0">@Model.NombreUsuarioSolicita</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-semibold">Almacén</label>
                            <p class="fs-5 mb-0">@Model.NombreAlmacen</p>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small text-uppercase fw-semibold">Empleado Receptor</label>
                            <p class="fs-5 mb-0">
                                @Model.NombreEmpleadoRecibe
                                <span class="badge bg-secondary ms-2">@Model.NumeroNominaEmpleado</span>
                            </p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Justificacion))
                        {
                            <div class="col-12">
                                <label class="text-muted small text-uppercase fw-semibold">Justificación</label>
                                <p class="mb-0">@Model.Justificacion</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Materiales Solicitados -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Materiales Solicitados</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Material</th>
                                    <th class="text-center">Cantidad Solicitada</th>
                                    <th class="text-center">Talla</th>
                                    @if (Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Entregada)
                                    {
                                        <th class="text-center">Cantidad Entregada</th>
                                        <th>Lote</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.Detalles)
                                {
                                    <tr>
                                        <td>
                                            <strong>@detalle.NombreMaterial</strong>
                                            <br><small class="text-muted">@detalle.UnidadMedida</small>
                                        </td>
                                        <td class="text-center">@detalle.CantidadSolicitada</td>
                                        <td class="text-center">
                                            @(string.IsNullOrEmpty(detalle.TallaSolicitada) ? "-" : detalle.TallaSolicitada)
                                        </td>
                                        @if (Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Entregada)
                                        {
                                            <td class="text-center">
                                                <span class="badge bg-success">@detalle.CantidadEntregada</span>
                                            </td>
                                            <td><small>@detalle.DescripcionLote</small></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th>Total</th>
                                    <th class="text-center">@Model.TotalCantidadSolicitada</th>
                                    <th></th>
                                    @if (Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Entregada)
                                    {
                                        <th class="text-center">@Model.Detalles.Sum(d => d.CantidadEntregada ?? 0)</th>
                                        <th></th>
                                    }
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Información de Aprobación (si aplica) -->
            @if (Model.FechaAprobacion.HasValue)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-warning py-3">
                        <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>Información de Aprobación</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="text-muted small text-uppercase fw-semibold">Aprobado/Rechazado por</label>
                                <p class="fs-5 mb-0">@Model.NombreUsuarioAprueba</p>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small text-uppercase fw-semibold">Fecha</label>
                                <p class="fs-5 mb-0">@Model.FechaAprobacion?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.MotivoRechazo))
                            {
                                <div class="col-12">
                                    <label class="text-muted small text-uppercase fw-semibold">Motivo de Rechazo</label>
                                    <p class="mb-0 text-danger">@Model.MotivoRechazo</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Información de Entrega (si aplica) -->
            @if (Model.FechaEntrega.HasValue)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-info text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-box-arrow-right me-2"></i>Información de Entrega</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="text-muted small text-uppercase fw-semibold">Entregado por</label>
                                <p class="fs-5 mb-0">@Model.NombreUsuarioEntrega</p>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small text-uppercase fw-semibold">Fecha de Entrega</label>
                                <p class="fs-5 mb-0">@Model.FechaEntrega?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Observaciones))
                            {
                                <div class="col-12">
                                    <label class="text-muted small text-uppercase fw-semibold">Observaciones</label>
                                    <p class="mb-0">@Model.Observaciones</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Acciones -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (puedeEditar && Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Pendiente && (esSuperAdmin || esAdmin))
                        {
                            <a asp-action="Aprobar" asp-route-id="@Model.IdRequisicion" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Aprobar / Rechazar
                            </a>
                        }
                        @if (puedeEditar && Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Aprobada && (esSuperAdmin || esAdmin))
                        {
                            <a asp-action="Entregar" asp-route-id="@Model.IdRequisicion" class="btn btn-success">
                                <i class="bi bi-box-arrow-right me-2"></i>Registrar Entrega
                            </a>
                        }
                        @if (Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Pendiente)
                        {
                            <form asp-action="Cancelar" asp-route-id="@Model.IdRequisicion" method="post"
                                  onsubmit="return confirm('¿Está seguro de cancelar esta requisición?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar Requisición
                                </button>
                            </form>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>

            <!-- Firma Digital (si existe) -->
            @if (!string.IsNullOrEmpty(Model.FirmaDigital))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-secondary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-pen me-2"></i>Firma Digital</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.FirmaDigital" alt="Firma Digital" class="img-fluid border rounded" style="max-height: 150px;" />
                    </div>
                </div>
            }

            <!-- Foto Evidencia (si existe) -->
            @if (!string.IsNullOrEmpty(Model.FotoEvidencia))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-secondary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-camera me-2"></i>Foto Evidencia</h5>
                    </div>
                    <div class="card-body text-center">
                        <a href="@Model.FotoEvidencia" target="_blank">
                            <img src="@Model.FotoEvidencia" alt="Evidencia" class="img-fluid rounded" style="max-height: 200px;" />
                        </a>
                        <br>
                        <small class="text-muted">Clic para ver tamaño completo</small>
                    </div>
                </div>
            }

            <!-- Timeline de Estado -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Historial</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <strong>Solicitada</strong>
                                <p class="small text-muted mb-0">@Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        @if (Model.FechaAprobacion.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-@(Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Rechazada ? "danger" : "warning")"></div>
                                <div class="timeline-content">
                                    <strong>@(Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Rechazada ? "Rechazada" : "Aprobada")</strong>
                                    <p class="small text-muted mb-0">@Model.FechaAprobacion?.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        }
                        @if (Model.FechaEntrega.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <strong>Entregada</strong>
                                    <p class="small text-muted mb-0">@Model.FechaEntrega?.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        }
                        @if (Model.EstadoRequisicion == VH.Services.Entities.EstadoRequisicion.Cancelada)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-secondary"></div>
                                <div class="timeline-content">
                                    <strong>Cancelada</strong>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }
    .timeline-item:last-child {
        padding-bottom: 0;
    }
    .timeline-item::before {
        content: '';
        position: absolute;
        left: -24px;
        top: 8px;
        height: calc(100% + 4px);
        width: 2px;
        background: #dee2e6;
    }
    .timeline-item:last-child::before {
        display: none;
    }
    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 4px;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }
</style>