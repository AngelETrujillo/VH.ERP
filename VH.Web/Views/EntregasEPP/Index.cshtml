@model IEnumerable<VH.Services.DTOs.EntregaEPPResponseDto>

@{
    ViewData["Title"] = "Entregas de EPP";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clipboard-check"></i> Registro de Entregas EPP</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Entrega
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtro por empleado -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" class="row align-items-center">
                <div class="col-auto">
                    <label class="form-label mb-0">Filtrar por Empleado:</label>
                </div>
                <div class="col-md-4">
                    <select name="idEmpleado" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="">-- Todos los empleados --</option>
                        @if (ViewBag.EmpleadosFiltro != null)
                        {
                            @foreach (var emp in ViewBag.EmpleadosFiltro as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@emp.Value" selected="@(ViewBag.FiltroEmpleado?.ToString() == emp.Value)">@emp.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Empleado</th>
                        <th>No. Nómina</th>
                        <th>Material</th>
                        <th class="text-center">Cantidad</th>
                        <th>Talla</th>
                        <th>Proveedor</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FechaEntrega.ToString("dd/MM/yyyy")</td>
                                <td><strong>@item.NombreCompletoEmpleado</strong></td>
                                <td><span class="badge bg-secondary">@item.NumeroNominaEmpleado</span></td>
                                <td>@item.NombreMaterial</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.CantidadEntregada @item.UnidadMedidaMaterial</span>
                                </td>
                                <td>@(string.IsNullOrEmpty(item.TallaEntregada) ? "-" : item.TallaEntregada)</td>
                                <td class="small">@item.NombreProveedor</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.IdEntrega"
                                           class="btn btn-outline-info" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdEntrega"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdEntrega"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                No hay entregas registradas
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>