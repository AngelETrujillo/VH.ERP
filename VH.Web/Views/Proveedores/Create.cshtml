@model VH.Services.DTOs.ProveedorRequestDto

@{
    ViewData["Title"] = "Nuevo Proveedor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus"></i> Registrar Nuevo Proveedor</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <h6 class="text-muted border-bottom pb-2">Información Fiscal / General</h6>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="Nombre" class="form-label fw-bold">Razón Social / Nombre *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Aceros y Herramientas S.A." />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RFC" class="form-label">RFC *</label>
                                <input asp-for="RFC" class="form-control" placeholder="XAXX010101000" maxlength="13" />
                                <span asp-validation-for="RFC" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mt-4">
                                <h6 class="text-muted border-bottom pb-2">Datos de Contacto</h6>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Contacto" class="form-label">Persona de Contacto *</label>
                                <input asp-for="Contacto" class="form-control" placeholder="Nombre del contacto" />
                                <span asp-validation-for="Contacto" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label">Teléfono</label>
                                <input asp-for="Telefono" class="form-control" placeholder="(81) 1234-5678" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>

                            <div class="col-12 mt-3">
                                <div class="form-check form-switch">
                                    <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="Activo" class="form-check-label">Proveedor Activo</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light border">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-lg"></i> Guardar Proveedor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}