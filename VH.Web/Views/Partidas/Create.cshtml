@model VH.Services.DTOs.ConceptoPartidaRequestDto

@{
    ViewData["Title"] = "Crear Nueva Partida";
    var idProyecto = ViewBag.IdProyecto; // Obtenemos el ID del proyecto del ViewBag
}

<h2>@ViewData["Title"]</h2>
<h4>Proyecto ID: @idProyecto</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Partidas" asp-action="Create" asp-route-idProyecto="@idProyecto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="UnidadMedida" class="control-label"></label>
                <input asp-for="UnidadMedida" class="form-control" />
                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="CantidadEstimada" class="control-label"></label>
                <input asp-for="CantidadEstimada" class="form-control" />
                <span asp-validation-for="CantidadEstimada" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear Partida" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-idProyecto="@idProyecto">Volver a las Partidas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}