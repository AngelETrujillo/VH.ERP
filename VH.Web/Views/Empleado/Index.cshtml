@model IEnumerable<VH.Services.DTOs.EmpleadoResponseDto>

@{
    ViewData["Title"] = "Empleados";
}

<div class="page-content">
    <!-- Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    <i class="bi bi-people text-primary me-2"></i>Empleados
                </h2>
                <p class="page-subtitle">Gestiona el personal de la empresa</p>
            </div>
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> Nuevo Empleado
                </a>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Contenido -->
    <div class="card content-card">
        <div class="card-header card-header-actions">
            <div class="row align-items-center w-100">
                <div class="col-md-4">
                    <div class="input-group input-group-search">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Buscar empleado...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select id="filterEstado" class="form-select">
                        <option value="">Todos los estados</option>
                        <option value="activo">Activos</option>
                        <option value="inactivo">Inactivos</option>
                    </select>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge bg-primary fs-6">@Model.Count() empleados</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern" id="dataTable">
                    <thead>
                        <tr>
                            <th>Empleado</th>
                            <th>No. Nómina</th>
                            <th>Puesto</th>
                            <th>Proyecto Asignado</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center" style="width: 150px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var iniciales = $"{item.Nombre?.FirstOrDefault()}{item.ApellidoPaterno?.FirstOrDefault()}".ToUpper();
                                <tr data-estado="@(item.Activo ? "activo" : "inactivo")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary-subtle text-primary me-3">
                                                @iniciales
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@item.Nombre @item.ApellidoPaterno @item.ApellidoMaterno</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary-subtle text-secondary">
                                            <i class="bi bi-hash"></i>@item.NumeroNomina
                                        </span>
                                    </td>
                                    <td>@item.Puesto</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.NombreProyecto))
                                        {
                                            <span class="badge bg-info-subtle text-info">
                                                <i class="bi bi-building me-1"></i>@item.NombreProyecto
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin asignar</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Activo)
                                        {
                                            <span class="status-badge status-active">
                                                <i class="bi bi-check-circle-fill"></i> Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-inactive">
                                                <i class="bi bi-x-circle-fill"></i> Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group-actions">
                                            <a asp-action="Details" asp-route-id="@item.IdEmpleado"
                                               class="btn-action btn-action-view" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdEmpleado"
                                               class="btn-action btn-action-edit" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdEmpleado"
                                               class="btn-action btn-action-delete" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="bi bi-people"></i>
                                        <h5>No hay empleados registrados</h5>
                                        <p>Comienza agregando tu primer empleado</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-1"></i> Agregar Empleado
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', filterTable);
        document.getElementById('filterEstado').addEventListener('change', filterTable);

        function filterTable() {
            const searchFilter = document.getElementById('searchInput').value.toLowerCase();
            const estadoFilter = document.getElementById('filterEstado').value;
            const rows = document.querySelectorAll('#dataTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const estado = row.dataset.estado;
                const matchText = text.includes(searchFilter);
                const matchEstado = !estadoFilter || estado === estadoFilter;
                row.style.display = matchText && matchEstado ? '' : 'none';
            });
        }
    </script>
}