@model IEnumerable<VH.Services.DTOs.MaterialEPPResponseDto>

@{
    ViewData["Title"] = "Materiales EPP";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam"></i> Catálogo de Materiales EPP</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Material
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Unidad</th>
                        <th class="text-end">Costo Est.</th>
                        <th class="text-center">Stock Global</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Nombre</strong>
                                    @if (!string.IsNullOrEmpty(item.Descripcion))
                                    {
                                        <div class="small text-muted">@item.Descripcion</div>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.AbreviaturaUnidadMedida</span>
                                    <span class="small">@item.NombreUnidadMedida</span>
                                </td>
                                <td class="text-end">$@item.CostoUnitarioEstimado.ToString("N2")</td>
                                <td class="text-center">
                                    <span class="badge bg-info">@item.StockGlobal</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.IdMaterial"
                                           class="btn btn-outline-info" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdMaterial"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdMaterial"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No hay materiales registrados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>