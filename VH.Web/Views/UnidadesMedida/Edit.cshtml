@model VH.Services.DTOs.UnidadMedidaRequestDto
@{
    ViewData["Title"] = "Editar Unidad de Medida";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-pencil-square text-warning me-2"></i>Editar Unidad de Medida
            </h2>
            <p class="text-muted mb-0">Modifique la información de la unidad</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-warning text-dark py-3">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información de la Unidad</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-7">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre <span class="text-danger">*</span></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="Abreviatura" class="form-label fw-semibold">Abreviatura <span class="text-danger">*</span></label>
                                <input asp-for="Abreviatura" class="form-control form-control-lg text-uppercase" maxlength="20" />
                                <span asp-validation-for="Abreviatura" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-check-lg me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-warning mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>Advertencia
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-dot text-warning me-1"></i>Cambiar la abreviatura afectará los reportes</li>
                        <li><i class="bi bi-dot text-warning me-1"></i>Los materiales asociados mantendrán su vínculo</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}