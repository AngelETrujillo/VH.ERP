@model IEnumerable<VH.Services.DTOs.Usuario.UsuarioResponseDto>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-people"></i> Usuarios del Sistema</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nuevo Usuario
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Estado</th>
                        <th>Último Acceso</th>
                        <th width="150">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td><strong>@usuario.UserName</strong></td>
                            <td>@usuario.NombreCompleto</td>
                            <td>@usuario.Email</td>
                            <td>
                                @foreach (var rol in usuario.Roles)
                                {
                                    <span class="badge bg-info">@rol</span>
                                }
                            </td>
                            <td>
                                @if (usuario.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>@(usuario.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="ToggleActivo" asp-route-id="@usuario.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-warning" title="@(usuario.Activo ? "Desactivar" : "Activar")">
                                            <i class="bi bi-@(usuario.Activo ? "pause" : "play")"></i>
                                        </button>
                                    </form>
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <form asp-action="Delete" asp-route-id="@usuario.Id" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar este usuario?')">
                                            <button type="submit" class="btn btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>