@model VH.Services.DTOs.MaterialEPPResponseDto

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Registrar Nuevo Material</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Casco de Seguridad" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="row">
                            @* <div class="col-md-6 mb-3">
                                <label asp-for="UnidadMedida" class="form-label">Unidad</label>
                                <input asp-for="UnidadMedida" class="form-control" placeholder="Pza, Par, etc." />
                            </div> *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="CostoUnitarioEstimado" class="form-label">Costo Est.</label>
                                <input asp-for="CostoUnitarioEstimado" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" checked>
                            <label asp-for="Activo" class="form-check-label">Material Activo</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Guardar Material</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>