@model IEnumerable<VH.Services.DTOs.ProyectoResponseDto>
@{
    ViewData["Title"] = "Proyectos";
    var esSuperAdmin = User.IsInRole("SuperAdmin");
    var puedeCrear = PermisoHelper.PuedeCrear(Context.Session, "PROYECTOS", esSuperAdmin);
    var puedeEditar = PermisoHelper.PuedeEditar(Context.Session, "PROYECTOS", esSuperAdmin);
    var puedeEliminar = PermisoHelper.PuedeEliminar(Context.Session, "PROYECTOS", esSuperAdmin);
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-building text-primary me-2"></i>Gestión de Proyectos
            </h2>
            <p class="text-muted mb-0">Administra las obras y proyectos de construcción</p>
        </div>
        @if (puedeCrear)
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Proyecto
            </a>
        }
    </div>

    <!-- Alertas -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por nombre o tipo de obra...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="badge bg-secondary">@Model?.Count() proyectos</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Proyecto</th>
                            <th>Tipo de Obra</th>
                            <th>Fecha Inicio</th>
                            <th class="text-end">Presupuesto</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-primary-subtle text-primary me-3">
                                                <i class="bi bi-building"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@item.Nombre</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TipoObra))
                                        {
                                            <span class="badge bg-info-subtle text-info">@item.TipoObra</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin especificar</span>
                                        }
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar3 text-muted me-1"></i>
                                        @item.FechaInicio.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-bold text-success">@item.PresupuestoTotal.ToString("C2")</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdProyecto"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (puedeEditar)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.IdProyecto"
                                                   class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                            @if (puedeEliminar)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.IdProyecto"
                                                   class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">
                                    <div class="text-center py-5">
                                        <i class="bi bi-building display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay proyectos registrados</h5>
                                        <p class="text-muted">Comienza creando tu primer proyecto</p>
                                        @if (puedeCrear)
                                        {
                                            <a asp-action="Create" class="btn btn-primary">
                                                <i class="bi bi-plus-lg me-2"></i>Crear Proyecto
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
    </script>
}