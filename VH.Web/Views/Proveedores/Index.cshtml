@model IEnumerable<VH.Services.DTOs.ProveedorResponseDto>
@{
    ViewData["Title"] = "Proveedores";
    var esSuperAdmin = User.IsInRole("SuperAdmin");
    var puedeCrear = PermisoHelper.PuedeCrear(Context.Session, "PROVEEDORES", esSuperAdmin);
    var puedeEditar = PermisoHelper.PuedeEditar(Context.Session, "PROVEEDORES", esSuperAdmin);
    var puedeEliminar = PermisoHelper.PuedeEliminar(Context.Session, "PROVEEDORES", esSuperAdmin);
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-truck text-primary me-2"></i>Gestión de Proveedores
            </h2>
            <p class="text-muted mb-0">Administra los proveedores de materiales y EPP</p>
        </div>
        @if (puedeCrear)
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Proveedor
            </a>
        }
    </div>

    <!-- Alertas -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                               placeholder="Buscar por nombre, RFC o contacto...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroTodos" checked>
                        <label class="btn btn-outline-secondary btn-sm" for="filtroTodos">Todos</label>
                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroActivos">
                        <label class="btn btn-outline-success btn-sm" for="filtroActivos">Activos</label>
                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroInactivos">
                        <label class="btn btn-outline-danger btn-sm" for="filtroInactivos">Inactivos</label>
                    </div>
                    <span class="badge bg-secondary ms-3">@Model?.Count() registros</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Proveedor</th>
                            <th>RFC</th>
                            <th>Contacto</th>
                            <th>Teléfono</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center" style="width:140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr data-estado="@(item.Activo ? "activo" : "inactivo")">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-circle bg-primary-subtle text-primary me-3">
                                                <i class="bi bi-truck"></i>
                                            </div>
                                            <h6 class="mb-0 fw-semibold">@item.Nombre</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <code class="bg-light px-2 py-1 rounded">@item.RFC</code>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Contacto))
                                        {
                                            <span><i class="bi bi-person text-muted me-1"></i>@item.Contacto</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Telefono))
                                        {
                                            <span><i class="bi bi-telephone text-muted me-1"></i>@item.Telefono</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success-subtle text-success px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.IdProveedor"
                                               class="btn btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (puedeEditar)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.IdProveedor"
                                                   class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                            @if (puedeEliminar)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.IdProveedor"
                                                   class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="text-center py-5">
                                        <i class="bi bi-truck display-4 text-muted"></i>
                                        <h5 class="mt-3 text-muted">No hay proveedores registrados</h5>
                                        <p class="text-muted">Comienza agregando tu primer proveedor</p>
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-2"></i>Agregar Proveedor
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .table > tbody > tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.4rem 0.6rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
            });
        });
        document.querySelectorAll('input[name="filtroEstado"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const filtro = this.id.replace('filtro', '').toLowerCase();
                document.querySelectorAll('#dataTable tbody tr').forEach(row => {
                    const estado = row.dataset.estado;
                    if (filtro === 'todos') row.style.display = '';
                    else if (filtro === 'activos') row.style.display = estado === 'activo' ? '' : 'none';
                    else if (filtro === 'inactivos') row.style.display = estado === 'inactivo' ? '' : 'none';
                });
            });
        });
    </script>
}