@model VH.Services.DTOs.ProveedorRequestDto

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Proveedor</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@ViewBag.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Razón Social / Nombre *</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="RFC" class="form-label">RFC *</label>
                                <input asp-for="RFC" class="form-control" maxlength="13" />
                                <span asp-validation-for="RFC" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contacto" class="form-label">Persona de Contacto *</label>
                                <input asp-for="Contacto" class="form-control" />
                                <span asp-validation-for="Contacto" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label">Teléfono</label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">Proveedor Activo</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning px-4">
                                <i class="bi bi-check-lg"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}