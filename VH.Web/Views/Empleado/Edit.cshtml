@model VH.Services.DTOs.EmpleadoRequestDto
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-pencil-square text-warning me-2"></i>Editar Empleado
            </h2>
            <p class="text-muted mb-0">Modifique la información del empleado</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Datos Personales -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-warning text-dark py-3">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Datos Personales</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre(s) <span class="text-danger">*</span></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ApellidoPaterno" class="form-label fw-semibold">Apellido Paterno <span class="text-danger">*</span></label>
                                <input asp-for="ApellidoPaterno" class="form-control form-control-lg" />
                                <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ApellidoMaterno" class="form-label fw-semibold">Apellido Materno</label>
                                <input asp-for="ApellidoMaterno" class="form-control form-control-lg" />
                                <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Datos Laborales -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Datos Laborales</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="NumeroNomina" class="form-label fw-semibold">No. Nómina <span class="text-danger">*</span></label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text"><i class="bi bi-hash"></i></span>
                                    <input asp-for="NumeroNomina" class="form-control" />
                                </div>
                                <span asp-validation-for="NumeroNomina" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Puesto" class="form-label fw-semibold">Puesto <span class="text-danger">*</span></label>
                                <input asp-for="Puesto" class="form-control form-control-lg" />
                                <span asp-validation-for="Puesto" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IdProyecto" class="form-label fw-semibold">Proyecto <span class="text-danger">*</span></label>
                                <select asp-for="IdProyecto" class="form-select form-select-lg" asp-items="@ViewBag.Proyectos">
                                    <option value="">-- Seleccionar --</option>
                                </select>
                                <span asp-validation-for="IdProyecto" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estado -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="form-check form-switch">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" id="switchActivo">
                            <label class="form-check-label fw-semibold" for="switchActivo">
                                <i class="bi bi-toggle-on text-success me-2"></i>Empleado Activo
                            </label>
                            <p class="text-muted small mb-0 ms-4">El empleado podrá recibir asignaciones y entregas de EPP</p>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-check-lg me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-warning mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>Advertencia
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-dot text-warning me-1"></i>Cambiar el proyecto puede afectar entregas pendientes</li>
                        <li class="mb-2"><i class="bi bi-dot text-warning me-1"></i>Desactivar al empleado lo ocultará de listas de entrega</li>
                        <li><i class="bi bi-dot text-warning me-1"></i>El historial de entregas se mantiene sin cambios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}