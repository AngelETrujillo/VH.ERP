@using VH.Services.DTOs.Analytics
@{
    ViewData["Title"] = "Configuración de Materiales EPP";
    var configuraciones = Model as IEnumerable<ConfiguracionMaterialResponseDto>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-gear text-primary me-2"></i>Configuración de Materiales EPP
            </h2>
            <p class="text-muted mb-0">Define vida útil, frecuencias y cantidades máximas para detección de anomalías</p>
        </div>
        <div>
            <a asp-action="ConfigurarMaterial" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Nueva Configuración
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver a Alertas
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Material</th>
                            <th>Unidad</th>
                            <th class="text-center">Vida Útil (días)</th>
                            <th class="text-center">Frecuencia Mín. (días)</th>
                            <th class="text-center">Máx. Mensual</th>
                            <th class="text-center">Máx. por Entrega</th>
                            <th class="text-center">Umbral Alerta</th>
                            <th class="text-center">Requiere Devolución</th>
                            <th class="text-center">Estado</th>
                            <th width="80"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (configuraciones != null && configuraciones.Any())
                        {
                            @foreach (var config in configuraciones)
                            {
                                <tr>
                                    <td><strong>@config.NombreMaterial</strong></td>
                                    <td>@config.UnidadMedida</td>
                                    <td class="text-center">@config.VidaUtilDias</td>
                                    <td class="text-center">@config.FrecuenciaMinimaDias</td>
                                    <td class="text-center">@(config.CantidadMaximaMensual?.ToString("N2") ?? "-")</td>
                                    <td class="text-center">@(config.CantidadMaximaPorEntrega?.ToString("N2") ?? "-")</td>
                                    <td class="text-center">@config.UmbralAlertaPorcentaje%</td>
                                    <td class="text-center">
                                        @if (config.RequiereDevolucion)
                                        {
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-x-circle text-muted"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (config.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="ConfigurarMaterial" asp-route-idMaterial="@config.IdMaterial" 
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    No hay configuraciones definidas.<br>
                                    <a asp-action="ConfigurarMaterial" class="btn btn-primary mt-3">
                                        <i class="bi bi-plus-lg me-1"></i>Crear primera configuración
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="bi bi-question-circle me-2"></i>Ayuda</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="bi bi-clock text-primary me-1"></i>Vida Útil</h6>
                    <p class="small text-muted">Días esperados de duración del material. Si un empleado solicita el mismo material antes de este tiempo, se genera una alerta.</p>
                    
                    <h6><i class="bi bi-arrow-repeat text-info me-1"></i>Frecuencia Mínima</h6>
                    <p class="small text-muted">Días mínimos que deben pasar entre solicitudes del mismo material por el mismo empleado.</p>
                </div>
                <div class="col-md-6">
                    <h6><i class="bi bi-box text-warning me-1"></i>Cantidad Máxima</h6>
                    <p class="small text-muted">Límites de cantidad por mes y por entrega. Exceder estos límites genera alertas de exceso.</p>
                    
                    <h6><i class="bi bi-percent text-danger me-1"></i>Umbral de Alerta</h6>
                    <p class="small text-muted">Porcentaje de la vida útil que debe cumplirse antes de poder solicitar sin alerta. Ej: 70% significa que si la vida útil es 100 días, generar alerta si solicita antes de 70 días.</p>
                </div>
            </div>
        </div>
    </div>
</div>
