@model VH.Services.DTOs.EmpleadoResponseDto

@{
    ViewData["Title"] = "Eliminar Empleado";
    var iniciales = $"{Model.Nombre?.FirstOrDefault()}{Model.ApellidoPaterno?.FirstOrDefault()}".ToUpper();
}

<div class="page-content">
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Empleados</a></li>
                <li class="breadcrumb-item active">Eliminar</li>
            </ol>
        </nav>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card form-card delete-card">
                <div class="card-header bg-danger">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body text-center">
                    <div class="delete-icon">
                        <i class="bi bi-person-x"></i>
                    </div>

                    <h5 class="mb-3">¿Está seguro de eliminar este empleado?</h5>
                    <p class="text-muted mb-4">Esta acción no se puede deshacer.</p>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="avatar-md bg-primary-subtle text-primary me-3">
                                    @iniciales
                                </div>
                                <div class="text-start">
                                    <h6 class="mb-0">@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h6>
                                    <small class="text-muted">@Model.Puesto</small>
                                </div>
                            </div>
                            <div class="row text-start">
                                <div class="col-6">
                                    <small class="text-muted">No. Nómina</small>
                                    <p class="mb-0 fw-semibold">@Model.NumeroNomina</p>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Proyecto</small>
                                    <p class="mb-0 fw-semibold">@(string.IsNullOrEmpty(Model.NombreProyecto) ? "N/A" : Model.NombreProyecto)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.IdEmpleado">
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-x-lg me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash me-1"></i> Sí, Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>