@using VH.Services.DTOs.Analytics
@model IEnumerable<PuestoResponseDto>
@{
    ViewData["Title"] = "Catálogo de Puestos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-person-badge text-primary me-2"></i>Catálogo de Puestos
            </h2>
            <p class="text-muted mb-0">Administración de puestos de trabajo para análisis de consumo</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nuevo Puesto
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-center">Nivel de Riesgo EPP</th>
                            <th class="text-center">Empleados</th>
                            <th class="text-center">Estado</th>
                            <th width="150"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var puesto in Model)
                            {
                                <tr>
                                    <td><strong>@puesto.Nombre</strong></td>
                                    <td><small class="text-muted">@(puesto.Descripcion ?? "-")</small></td>
                                    <td class="text-center">
                                        @switch (puesto.NivelRiesgoEPP)
                                        {
                                            case VH.Services.Entities.NivelRiesgoEPP.Alto:
                                                <span class="badge bg-danger">Alto</span>
                                                break;
                                            case VH.Services.Entities.NivelRiesgoEPP.Medio:
                                                <span class="badge bg-warning">Medio</span>
                                                break;
                                            default:
                                                <span class="badge bg-success">Bajo</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@puesto.TotalEmpleados</span>
                                    </td>
                                    <td class="text-center">
                                        @if (puesto.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@puesto.IdPuesto" class="btn btn-outline-secondary" title="Ver">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@puesto.IdPuesto" class="btn btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@puesto.IdPuesto" class="btn btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    No hay puestos registrados
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
