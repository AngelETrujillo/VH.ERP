@model VH.Services.DTOs.InventarioResponseDto
@{
    ViewData["Title"] = "Detalles de Inventario";

    var estadoStock = "Normal";
    var badgeClass = "bg-success";
    var estadoIcono = "bi-check-circle";
    var porcentaje = Model.StockMaximo > 0 ? (Model.Existencia / Model.StockMaximo) * 100 : 50;

    if (Model.Existencia == 0)
    {
        estadoStock = "Sin Stock";
        badgeClass = "bg-danger";
        estadoIcono = "bi-x-circle";
    }
    else if (Model.Existencia <= Model.StockMinimo)
    {
        estadoStock = "Stock Bajo";
        badgeClass = "bg-warning";
        estadoIcono = "bi-exclamation-triangle";
    }
    else if (Model.StockMaximo > 0 && Model.Existencia > Model.StockMaximo)
    {
        estadoStock = "Excedido";
        badgeClass = "bg-info";
        estadoIcono = "bi-arrow-up-circle";
    }
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0 fw-bold text-dark">
                <i class="bi bi-boxes text-info me-2"></i>Detalles de Inventario
            </h2>
            <p class="text-muted mb-0">Información completa del registro</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Tarjeta Principal -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-0">
                    <!-- Cabecera -->
                    <div class="bg-info bg-gradient p-4 text-white">
                        <div class="d-flex align-items-center">
                            <div class="icon-lg me-4">
                                <i class="bi bi-boxes display-5"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h3 class="mb-1 fw-bold">@Model.NombreMaterial</h3>
                                <p class="mb-0 opacity-75">
                                    <span class="badge bg-light text-info me-2">@Model.UnidadMedidaMaterial</span>
                                    <i class="bi bi-box-seam me-1"></i>@Model.NombreAlmacen
                                </p>
                            </div>
                            <div class="text-end">
                                <div class="fs-1 fw-bold">@Model.Existencia</div>
                                <span class="badge @badgeClass fs-6">
                                    <i class="bi @estadoIcono me-1"></i>@estadoStock
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles -->
                    <div class="p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small text-uppercase fw-semibold">
                                        <i class="bi bi-shield-check me-1"></i>Material
                                    </label>
                                    <p class="fs-5 mb-0 fw-semibold">@Model.NombreMaterial</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small text-uppercase fw-semibold">
                                        <i class="bi bi-box-seam me-1"></i>Almacén
                                    </label>
                                    <p class="fs-5 mb-0">
                                        <span class="badge bg-info-subtle text-info fs-6">@Model.NombreAlmacen</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="detail-item text-center">
                                    <label class="text-muted small text-uppercase fw-semibold">Existencia Actual</label>
                                    <p class="fs-2 mb-0 fw-bold @(Model.Existencia == 0 ? "text-danger" : Model.Existencia <= Model.StockMinimo ? "text-warning" : "text-success")">
                                        @Model.Existencia
                                    </p>
                                    <small class="text-muted">@Model.UnidadMedidaMaterial</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="detail-item text-center">
                                    <label class="text-muted small text-uppercase fw-semibold">Stock Mínimo</label>
                                    <p class="fs-2 mb-0 fw-bold text-warning">@Model.StockMinimo</p>
                                    <small class="text-muted">Nivel de alerta</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="detail-item text-center">
                                    <label class="text-muted small text-uppercase fw-semibold">Stock Máximo</label>
                                    <p class="fs-2 mb-0 fw-bold text-info">@(Model.StockMaximo > 0 ? Model.StockMaximo.ToString() : "∞")</p>
                                    <small class="text-muted">@(Model.StockMaximo > 0 ? "Límite superior" : "Sin límite")</small>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.UbicacionPasillo))
                            {
                                <div class="col-12">
                                    <div class="detail-item">
                                        <label class="text-muted small text-uppercase fw-semibold">
                                            <i class="bi bi-geo-alt me-1"></i>Ubicación en Almacén
                                        </label>
                                        <p class="fs-5 mb-0">
                                            <code class="bg-dark text-white px-3 py-1 rounded">@Model.UbicacionPasillo</code>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                </a>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.IdInventario" class="btn btn-warning btn-lg px-4">
                        <i class="bi bi-pencil me-2"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.IdInventario" class="btn btn-outline-danger btn-lg px-4">
                        <i class="bi bi-trash me-2"></i>Eliminar
                    </a>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <!-- Indicador visual -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-secondary mb-3">Nivel de Stock</h6>
                    <div class="position-relative pt-1">
                        <div class="progress" style="height: 25px;">
                            @if (Model.StockMaximo > 0)
                            {
                                <div class="progress-bar @(Model.Existencia == 0 ? "bg-danger" : Model.Existencia <= Model.StockMinimo ? "bg-warning" : Model.Existencia > Model.StockMaximo ? "bg-info" : "bg-success")"
                                     style="width: @Math.Min(porcentaje, 100)%">
                                    @Model.Existencia / @Model.StockMaximo
                                </div>
                            }
                            else
                            {
                                <div class="progress-bar bg-success" style="width: 50%">
                                    @Model.Existencia unidades
                                </div>
                            }
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2 small text-muted">
                        <span>0</span>
                        <span class="text-warning">Mín: @Model.StockMinimo</span>
                        @if (Model.StockMaximo > 0)
                        {
                            <span>Máx: @Model.StockMaximo</span>
                        }
                    </div>
                </div>
            </div>

            <div class="card border-0 bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-info mb-3">
                        <i class="bi bi-link-45deg me-2"></i>Acciones Rápidas
                    </h6>
                    <div class="d-grid gap-2">
                        <a asp-controller="ComprasEPP" asp-action="Create" class="btn btn-outline-success">
                            <i class="bi bi-cart-plus me-2"></i>Registrar Compra
                        </a>
                        <a asp-controller="EntregasEPP" asp-action="Create" class="btn btn-outline-primary">
                            <i class="bi bi-clipboard-check me-2"></i>Registrar Entrega
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-lg {
        font-size: 3rem;
        opacity: 0.9;
    }

    .detail-item {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
    }
</style>